# Configuration file for Islamic Adhkar Bot
# ملف الإعدادات لبوت الأذكار الإسلامية

# Bot Token - احصل على توكن البوت من @BotFather
# IMPORTANT: Replace this with your actual bot token
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Timezone - المنطقة الزمنية
# Examples: Asia/Riyadh, Asia/Dubai, Asia/Kuwait, etc.
TIMEZONE=Asia/Riyadh

# Schedule Times - مواعيد الإرسال (بصيغة 24 ساعة)
MORNING_ADHKAR_HOUR=5
MORNING_ADHKAR_MINUTE=0

EVENING_ADHKAR_HOUR=18
EVENING_ADHKAR_MINUTE=0

FRIDAY_DUA_HOUR=10
FRIDAY_DUA_MINUTE=0

FRIDAY_KAHF_HOUR=11
FRIDAY_KAHF_MINUTE=0

BEDTIME_REMINDER_HOUR=22
BEDTIME_REMINDER_MINUTE=0

# Random Content Schedule - جدول المحتوى العشوائي
# This sends random content every hour from 6 AM to 5 PM
RANDOM_CONTENT_START_HOUR=6
RANDOM_CONTENT_END_HOUR=17
RANDOM_CONTENT_MINUTE=30

# Database file - ملف قاعدة البيانات
DATABASE_FILE=adhkar_bot.db

# Logging Level - مستوى التسجيل
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
